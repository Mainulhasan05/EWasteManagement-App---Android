<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    android:orientation="vertical"
    tools:context=".DetailOrderActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/input_background"
        android:padding="@dimen/_5sdp"
        android:text="Order Detail View"
        android:textAlignment="center"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waste Type"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/primary_dark"
        />

    <TextView
        android:id="@+id/wasteType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waste Type"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/secondary_text"
        />





    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/primary_dark"
        />

    <TextView
        android:id="@+id/wastePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waste Type"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/secondary_text"
        />

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Time"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/primary_dark"
        />

    <TextView
        android:id="@+id/wastePickupTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waste Type"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/secondary_text"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return Reward"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/primary_dark"
        />

    <TextView
        android:id="@+id/wasteReturnReward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waste Type"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/secondary_text"
        />

</LinearLayout>